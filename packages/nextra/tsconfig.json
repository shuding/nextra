{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["es2023", "dom"],
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "allowImportingTsExtensions": /* for tests */ true,
    "paths": {
      "unified": ["./node_modules/unified"]
    }
  },
  "exclude": ["dist"]
}
